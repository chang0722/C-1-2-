#include <stdio.h>

int main() {
    int n;

    printf("상품 개수를 입력하세요: ");
    scanf("%d", &n);

    int in[101], out[101], stock[101];
    int totalIn = 0, totalOut = 0;

    printf("상품 별 입고수량 입력:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &in[i]);
        totalIn += in[i];
    }

    printf("상품 별 판매수량 입력:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &out[i]);
        stock[i] = in[i] - out[i];
        totalOut += out[i];
    }

    printf("\n재고수량 : ");
    for (int i = 0; i < n; i++) {
        printf("%d ", stock[i]);
    }
    printf("\n");

    double rate = (double)totalOut / totalIn * 100;
    printf("총 판매량 : %d (판매율 %.2f%%)\n", totalOut, rate);

    int maxId = 0, minId = 0;
    for (int i = 1; i < n; i++) {
        if (out[i] > out[maxId]) maxId = i;
        if (out[i] < out[minId]) minId = i;
    }

    printf("가장 많이 판매된 상품 : ID %d, 판매량 %d\n", maxId + 1, out[maxId]);
    printf("가장 적게 판매된 상품 : ID %d, 판매량 %d\n", minId + 1, out[minId]);

    for (int i = 0; i < n; i++) {
        if (stock[i] <= 2) {
            printf("상품 ID %d : 재고부족(%d)\n", i + 1, stock[i]);
        }
    }

    return 0;
}



